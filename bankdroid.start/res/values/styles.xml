<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="title">
		<item name="android:textSize">30sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#56748E</item>
	</style>
	
	<style name="subtitle">
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">italic</item>
		<item name="android:textColor">#000</item>
	</style>
	
	<style name="pageTitle">
		<item name="android:textSize">22sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#FFF</item>
		<item name="android:background">@color/sodaBlue</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingLeft">5sp</item>
		<item name="android:paddingRight">5sp</item>
		<item name="android:paddingTop">5sp</item>
		<item name="android:paddingBottom">2sp</item>
		<item name="android:layout_marginBottom">3sp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentTop">true</item>
	</style>
	
	<style name="progressBar">
		<item name="android:indeterminate">true</item>
		<item name="android:indeterminateOnly">true</item>
		<item name="android:indeterminateBehavior">repeat</item>
		<item name="android:visibility">invisible</item>
		<item name="android:layout_width">30sp</item>
		<item name="android:layout_height">30sp</item>
		<item name="android:layout_margin">5sp</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:layout_alignParentRight">true</item>
	</style>
	
	<style name="formLayout">
		<item name="android:stretchColumns">1</item>
		<item name="android:paddingLeft">5sp</item>
		<item name="android:paddingRight">5sp</item>
		<item name="android:paddingTop">5sp</item>
		<item name="android:paddingBottom">5sp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="labelText">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#333</item>
		<item name="android:gravity">center_vertical</item>
		
	</style>
	
	<style name="valueText">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#000</item>
	</style>
	
	<style name="commentText">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">#333</item>
	</style>
	
	<style name="amount">
		<item name="android:textSize">15sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">right</item>
	</style>
	
	<style name="button" parent="labelText">
		<item name="android:gravity">center</item>
		<item name="android:padding">8sp</item>
		<item name="android:layout_margin">3sp</item>
	</style>
	
	<style name="actionButton" parent="button">
		<item name="android:background">@drawable/action_button</item>
	</style>
	
	<style name="fieldButton" parent="button">
		<item name="android:background">@drawable/select_button</item>
	</style>

	<style name="field">
<!--		<item name="android:background">@drawable/field_background</item>-->
<!--		<item name="android:padding">8sp</item>-->
		<item name="android:singleLine">true</item>
<!--		<item name="android:layout_margin">5sp</item>-->
	</style>
	
	<style name="background">
		<item name="android:background">#FFF</item>
	</style>

	<style name="listBox">
		<item name="android:background">@drawable/listbackground</item>
		<item name="android:padding">3sp</item>
		<item name="android:layout_margin">3sp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>
	
	<style name="listBackground">
		<item name="android:background">@drawable/listbackground</item>
	</style>

	<style name="menuButton">
		<item name="android:padding">4sp</item>
		<item name="android:background">@drawable/menubuttonbackground</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textColor">#000</item>
		<item name="android:gravity">center_horizontal</item>
	</style>
		
</resources>