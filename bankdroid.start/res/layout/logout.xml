<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/bankdroid.start"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	style="@style/background"
	>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		style="@style/background" 
		>
		
		<TextView 
			android:text="@string/copyright" 
			android:id="@+id/copyright" 
			android:layout_gravity="right"
			android:textSize="10sp"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			/>
	
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_margin="15sp" 
			android:layout_height="wrap_content"
			android:background="@android:drawable/editbox_dropdown_light_frame">
			
			<ImageView 
				android:id="@+id/logo" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:src="@drawable/bankdroid_logo"
				android:padding="10sp"
				
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				/>
				
			<TextView 
				android:text="@string/aboutId" 
				android:id="@+id/productId" 
				android:textSize="17sp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#000000" 
				
				android:layout_alignParentTop="true"
				android:layout_toRightOf="@id/logo"
				android:layout_marginTop="10sp"
				/>
				
			<TextView 
				android:text="v1.0" 
				android:id="@+id/version" 
				android:textSize="13sp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#000000" 
				
				android:layout_below="@id/productId"
				android:layout_toRightOf="@id/logo"
				/>
				
			<ImageView
				android:id="@+id/gmailIcon"
				android:src="@drawable/gmail_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/version"
				android:layout_toRightOf="@id/logo"
				/>
				
			<ImageView
				android:id="@+id/twitterIcon"
				android:src="@drawable/twitter_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/version"
				android:layout_toRightOf="@id/gmailIcon"
				/>
				
			<ImageView
				android:id="@+id/facebookIcon"
				android:src="@drawable/facebook_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/version"
				android:layout_toRightOf="@id/twitterIcon"
				/>
				
			<ImageView
				android:id="@+id/divider"
				android:src="@android:drawable/divider_horizontal_bright"
				android:layout_width="fill_parent"
				android:layout_height="2sp"
				android:scaleType="fitXY"			
				android:layout_below="@id/gmailIcon"
				/>
				
			<TextView 
				android:text="@string/thankYou" 
				android:id="@+id/description" 
				android:textSize="16sp"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textColor="#000000" 
				android:paddingTop="15sp"
				android:paddingBottom="5sp"
				android:paddingRight="5sp"
				android:paddingLeft="5sp"
				
				android:layout_below="@id/divider"
				/>
				
			<TextView 
				android:text="@string/aboutDesc2" 
				android:id="@+id/description2" 
				android:textSize="12sp"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textColor="@color/textDark" 
				android:padding="5sp"
				
				android:layout_below="@id/description"
				/>
				
			<ImageView
				android:id="@+id/divider2"
				android:src="@android:drawable/divider_horizontal_bright"
				android:layout_width="fill_parent"
				android:layout_height="2sp"
				android:scaleType="fitXY"			
				android:layout_below="@id/description2"
				/>
				
			<TextView 
				android:text="@string/aboutUrl2" 
				android:id="@+id/url2" 
				android:textSize="13sp"
				android:gravity="right"
				
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:paddingRight="5sp"
				
				android:layout_below="@id/divider2"
				/>
				
		</RelativeLayout>
			
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"

			android:layout_marginBottom="10sp"	
			>
			
			<Button
				android:id="@+id/closeButton"
				android:text="@string/closeButton"
		
				style="@style/actionButton"
				
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>
				
			<Button
				android:id="@+id/loginButton"
				android:text="@string/loginButton"
		
				style="@style/actionButton"
				
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				/>
				
		</LinearLayout>

		<com.admob.android.ads.AdView  
			android:id="@+id/ad"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			app:backgroundColor="#917622"
			app:primaryTextColor="#FFFFFF"
			app:secondaryTextColor="#44596C"
			app:keywords="bank cib otp számla pénz account money"
			/>
	</LinearLayout>

</ScrollView>