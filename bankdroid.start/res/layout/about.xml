<?xml version="1.0" encoding="utf-8"?>
	
<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	style="@style/background"
	>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		style="@style/background" 
		>
		
		<TextView 
			android:text="@string/copyright" 
			android:id="@+id/copyright" 
			android:layout_gravity="right"
			android:textSize="10sp"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			/>
	
		<RelativeLayout
			android:background="@drawable/panel_background"
			android:paddingTop="8sp" 
			android:paddingLeft="15sp" 
			android:paddingRight="15sp" 
			android:paddingBottom="10sp" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5sp" 
			android:layout_marginRight="5sp" 
			>
			
			<ImageView 
				android:id="@+id/logo" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:src="@drawable/bankdroid_logo"
				android:padding="10sp"
				
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				/>
				
			<TextView 
				android:text="@string/aboutId" 
				android:id="@+id/productId" 
				android:textSize="17sp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#000000" 
				
				android:layout_alignParentTop="true"
				android:layout_toRightOf="@id/logo"
				android:layout_marginTop="10sp"
				/>
				
			<ImageView
				android:id="@+id/gmailIcon"
				android:src="@drawable/icon_gmail"
				android:background="@drawable/button"
				android:onClick="onMail"
				android:padding="2sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/productId"
				android:layout_alignLeft="@id/productId"
				/>
				
			<ImageView
				android:id="@+id/twitterIcon"
				android:src="@drawable/icon_twitter"
				android:background="@drawable/button"
				android:onClick="onTwitter"
				android:padding="2sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/productId"
				android:layout_toRightOf="@id/gmailIcon"
				/>
				
			<ImageView
				android:id="@+id/facebookIcon"
				android:src="@drawable/icon_facebook"
				android:background="@drawable/button"
				android:onClick="onFacebook"
				android:padding="2sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/productId"
				android:layout_toRightOf="@id/twitterIcon"
				/>
				
			<ImageView
				android:id="@+id/divider"
				android:src="@android:drawable/divider_horizontal_bright"
				android:layout_width="fill_parent"
				android:layout_height="2sp"
				android:scaleType="fitXY"			
				android:layout_below="@id/gmailIcon"
				/>
				
			<TextView 
				android:text="@string/aboutDesc" 
				android:id="@+id/description" 
				android:textSize="12sp"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textColor="#000000" 
				android:padding="5sp"
				
				android:layout_below="@id/divider"
				/>
				
			<TextView 
				android:text="@string/aboutDesc2" 
				android:id="@+id/description2" 
				android:textSize="12sp"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:textColor="@color/textDark" 
				android:padding="5sp"
				
				android:layout_below="@id/description"
				/>
				
			<ImageView
				android:id="@+id/divider2"
				android:src="@android:drawable/divider_horizontal_bright"
				android:layout_width="fill_parent"
				android:layout_height="2sp"
				android:scaleType="fitXY"			
				android:layout_below="@id/description2"
				/>

				
			<TextView 
				android:id="@+id/versionId" 
				android:text="v2.0" 
				android:textSize="12sp"
				android:gravity="left"
				android:textColor="#777"
				
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:paddingLeft="5sp"
				
				android:layout_below="@id/divider2"
				/>
				
			<TextView 
				android:text="@string/aboutUrl2" 
				android:id="@+id/url2" 
				android:textSize="12sp"
				android:gravity="right"
				
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:paddingRight="5sp"
				
				android:layout_below="@id/divider2"
				/>
				
		</RelativeLayout>
			
		<LinearLayout
			android:orientation="horizontal"
			android:paddingLeft="22sp"
			android:paddingRight="22sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			>
			<Button 
				android:id="@+id/productInfoButton" 
				android:text="@string/btnInfoSite" 
				android:drawableLeft="@drawable/info_icon"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:lines="1"
				/>
	
			<Button 
				android:id="@+id/donateButton" 
				android:text="@string/donateButton" 
				android:drawableLeft="@drawable/donate2"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:lines="1"
				/>
			
		</LinearLayout>
	
	</LinearLayout>

</ScrollView>


