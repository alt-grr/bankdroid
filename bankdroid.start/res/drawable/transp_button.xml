<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_selected="true">
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle"> 
			<solid android:color="#FF4F7F5B" />
			<stroke android:width="2dp"
		            android:color="#ff74AB45"/>
		
		    <corners android:radius="3sp"/> 
		</shape>
	</item>	
	<item android:state_pressed="true">
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle"> 
			<gradient android:startColor="#FFFF9544"  android:endColor="#BBFF9544"
				android:angle="270" />
			<stroke android:width="2dp"
		            android:color="#ffA5C731"/>
		
		    <corners android:radius="3sp"/> 
		</shape>
	</item>


	<item android:state_selected="false">
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle"> 
			<gradient android:startColor="#FFEFF7D6"  android:endColor="#BBEFF7D6"
				android:angle="270" />
			<stroke android:width="1sp"
		            android:color="#ffA5C731"/>
		
		    <corners android:radius="3sp"/> 
		</shape>
	</item>


</selector> 