<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_focused="true">
		<shape android:shape="rectangle">
			<gradient android:startColor="#FFC296" android:endColor="#FF9544" android:angle="270" />
			<stroke android:width="2sp" android:color="#FF6A00" />
			<corners android:radius="3sp" />
		</shape>
	</item>

	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<gradient android:startColor="#FF9544" android:endColor="#FFC296" android:angle="270" />
			<stroke android:width="2sp" android:color="#FF6A00" />
			<corners android:radius="3sp" />
		</shape>
	</item>

	<item>
		<shape android:shape="rectangle">
			<gradient android:startColor="#EEE" android:endColor="#BBB" android:angle="270" />
			<stroke android:width="1sp" android:color="#888" />
			<corners android:radius="3sp" />
		</shape>
	</item>
</selector> 