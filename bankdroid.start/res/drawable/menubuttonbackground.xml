<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape android:shape="rectangle" bottom="2sp" top="2sp" left="2sp" right="2sp">
			<stroke android:width="2sp" android:color="#BBB" />
			<corners android:radius="3sp" />
			<solid android:color="#3000"/>
		</shape>
	</item>
	<item android:state_focused="true">
		<shape android:shape="rectangle" bottom="2sp" top="2sp" left="2sp" right="2sp">
			<stroke android:width="1sp" android:color="#777F" />
			
			<solid android:color="#3000"/>
		</shape>
	</item>	
	<item>
		<shape android:shape="rectangle" bottom="2sp" top="2sp" left="2sp" right="2sp">
			<solid android:color="#0000"/>
		</shape>
	</item>
</selector> 