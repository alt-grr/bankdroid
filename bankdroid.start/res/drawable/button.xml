<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape
			android:shape="rectangle">
		    <corners
		        android:radius="3sp"
		        />
		
		    <stroke
		        android:width="1px"
		        android:color="@color/mainDark"/>
		
			<gradient
				android:type="linear" 
				android:startColor="#FFD0A9"
				android:endColor="#FFDCC0" 
				android:angle="90"
				/>
		</shape>
	</item>
	<item android:state_focused="true">
		<shape
			android:shape="rectangle">
		    <corners
		        android:radius="3sp"
		        />
			<solid
				android:color="#0FFF"
				/>
		    <stroke
		        android:width="1px"
		        android:color="@color/mainDark"/>

		</shape>
	</item>	
	<item android:state_selected="true">
		<shape
			android:shape="rectangle">
		    <corners
		        android:radius="3sp"
		        />
			<solid
				android:color="#0FFF"
				/>
		    <stroke
		        android:width="1px"
		        android:color="@color/mainDark"/>

		</shape>
	</item>	
	<item>
		<shape
			android:shape="rectangle">
			<solid
				android:color="#0FFF"
				/>
		</shape>
	</item>
</selector> 

