<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_selected="true">
		<shape android:shape="rectangle">
			<gradient android:startColor="#FFFFFF" android:endColor="#FFDC9B"
				android:angle="270" />
		</shape>
	</item>	
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<gradient android:startColor="#FFBE3D" android:endColor="#FFDC9B"
				android:angle="270" />
		</shape>
	</item>
	<item android:state_selected="false">
		<shape android:shape="rectangle">
			<gradient android:startColor="#FFFFFF" android:endColor="#EEEEEE"
				android:angle="270" />
		</shape>
	</item>
</selector> 