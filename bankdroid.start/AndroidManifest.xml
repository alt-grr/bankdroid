			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
<!--		<activity android:name=".StartActivity"/>-->
		<activity android:name=".auth.AuthStartActivity" android:theme="@android:style/Theme.NoTitleBar"/>
		<activity android:name=".auth.AuthBankSelectActivity" android:theme="@android:style/Theme.NoTitleBar"/>
		<activity android:name=".auth.BHAAuthActivity" android:theme="@android:style/Theme.NoTitleBar"/>
		<activity android:name=".auth.OTPAuthActivity" android:theme="@android:style/Theme.NoTitleBar"/>
		<activity android:name=".auth.DummyAuthActivity" android:theme="@android:style/Theme.NoTitleBar"/>
		
