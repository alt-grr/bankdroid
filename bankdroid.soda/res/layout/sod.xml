<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#56748E">
	
	<TextView 
		android:text="@string/copyright" 
		android:id="@+id/copyright" 
		android:layout_gravity="right"
		android:textSize="10sp"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		/>

	<FrameLayout
		android:layout_width="wrap_content" 
		android:layout_height="100sp"
		android:layout_gravity="center_horizontal"
		>
		<LinearLayout
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:background="@android:drawable/alert_light_frame"
			android:orientation="horizontal"
			>
			<ImageView 
				android:id="@+id/BankLogo" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:src="@drawable/bankdroid_logo"
				android:padding="10sp"
				/>
			<TextView 
				android:text="Az an ideiglenes kadja: 51930398 Ez a kad belapashez 13:47:58-ig hasznalhatja, de arizze meg a tranzakciahoz! Kapcsolat azonosata: 133758 Budapest Bank" 
				android:id="@+id/messageBody" 
				android:layout_gravity="center_horizontal"
				android:textSize="10sp"
				android:layout_width="wrap_content" 
				android:layout_height="fill_parent"
				android:textColor="#000000" 
				android:background="@android:drawable/editbox_background"/>
		</LinearLayout>
	</FrameLayout>
		
	
		

	<LinearLayout 
		android:id="@+id/ButtonRow" 
		android:layout_gravity="center_horizontal"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
		<Button 
			android:text="76037367" 
			android:id="@+id/codeButton" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:textColor="#EF6A28" 
			android:textSize="32sp" 
			/>
	</LinearLayout>

	<TextView 
		android:text="@string/clickToClose" 
		android:id="@+id/TextView01" 
		android:layout_gravity="center_horizontal"
		android:textSize="10sp"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"/>
	
	<TextView 
		android:text="Received at: 2009.12.20 12:34:11" 
		android:id="@+id/ReceivedAt" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		/>
		
	<TextView 
		android:text="Remaining time: 00:12:22" 
		android:id="@+id/CountDown" 
		android:layout_gravity="center_horizontal"
		android:visibility="invisible"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"/>

	
		

</LinearLayout>
