<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="vertical"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:background="@drawable/background3"
   	>
   	
	<TextView 
		android:id="@+id/titleView" 

		android:text="@string/mainTitle"
		android:textStyle="bold"
		android:textColor="#FFFFFF"
		android:textSize="20sp"
		android:shadowColor="#000000"
		android:shadowRadius="1"
		android:shadowDx="0"
		android:shadowDy="0"
		
		android:background="@drawable/titlebackground"
		
		android:gravity="left"
		android:paddingLeft="18sp"
		android:paddingTop="5sp"
		android:paddingBottom="5sp"

		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_marginBottom="10sp"
		/>
		
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/titleView"
		android:layout_alignParentBottom="true"
		>
		
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="20sp"
			android:paddingRight="20sp"
			>
			
			<LinearLayout
				android:onClick="onViewLastCode"
				style="@style/button"
				>
				<TextView
					android:text="@string/btnViewLast"
					android:drawableLeft="@drawable/icon_viewlast"
					style="@style/buttonTitle"
					/>
				<TextView
					android:text="Recall the last SMS code."
					style="@style/buttonComment"
					/>
			</LinearLayout>
			
			<View
				android:background="#A6642E"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginBottom="6sp"
				/>
			
			
			<LinearLayout
				android:onClick="onHelp"
				style="@style/button"
				>
				<TextView
					android:text="@string/btnInfoSite"
					android:drawableLeft="@drawable/icon_infosite"

					style="@style/buttonTitle"
					/>
				<TextView
					android:text="Don't undestand what is this app?"
					style="@style/buttonComment"
					/>
			</LinearLayout>
			
			
			<LinearLayout
				android:onClick="onSubmitSample"
				style="@style/button"
				>
				<TextView
					android:text="@string/btnSubmitSample"
					android:drawableLeft="@drawable/icon_submitsample"

					style="@style/buttonTitle"
					/>
				<TextView
					android:text="Your bank is not yet supported?"
					style="@style/buttonComment"
					/>
			</LinearLayout>
			
			
			<LinearLayout
				android:onClick="onManageBank"
				style="@style/button"
				>
				<TextView
					android:text="@string/btnManageBanks"
					android:drawableLeft="@drawable/icon_managebank"

					style="@style/buttonTitle"
					/>
				<TextView
					android:text="Maintain banks yourself..."
					style="@style/buttonComment"
					/>
			</LinearLayout>
			
		</LinearLayout>
	</ScrollView>


</RelativeLayout>
