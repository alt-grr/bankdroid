<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="labelText">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>
	<style name="commentText">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#AAAAAA</item>
	</style>
	
	<!-- MAIN PAGE Styles -->
	<style name="button">
		<item name="android:orientation">vertical</item>
		<item name="android:focusable">true</item>
		<item name="android:background">@drawable/button</item>
		<item name="android:padding">5sp</item>
		<item name="android:layout_marginBottom">5sp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="buttonTitle">
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">#A6642E</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#FFF</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">0</item>
		<item name="android:shadowRadius">3</item>
		<item name="android:drawablePadding">6sp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="buttonComment">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">#BF9C7F</item>
		<item name="android:layout_marginLeft">30sp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
</resources>