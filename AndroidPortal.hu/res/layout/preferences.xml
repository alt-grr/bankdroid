<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<ListPreference
		android:title="@string/prefFeed"
		android:summary="@string/prefFeedSummary"
		android:key="hu.androidportal.Feed"
		android:defaultValue="http://feeds.feedburner.com/magyarandroidportal"
		android:entries="@array/feedTitles"
		android:entryValues="@array/feedValues" 
		/>
	<ListPreference
		android:title="@string/prefFreq"
		android:summary="@string/prefFreqSummary"
		android:key="hu.androidportal.Frequency"
		android:defaultValue="60"
		android:entries="@array/freqTitles"
		android:entryValues="@array/freqValues" 
		/>
	<ListPreference
		android:title="@string/prefExp"
		android:summary="@string/prefExpSummary"
		android:key="hu.androidportal.Expiry"
		android:defaultValue="60"
		android:entries="@array/expTitles"
		android:entryValues="@array/expValues" 
		/>
	<CheckBoxPreference 
		android:title="@string/prefNoti" 
		android:defaultValue="true"
		android:summary="@string/prefNotiSummary" 
		android:key="hu.androidportal.Notification" 
		/>
	<CheckBoxPreference 
		android:title="@string/prefDebug" 
		android:defaultValue="false"
		android:summary="@string/prefDebugSummary" 
		android:key="hu.androidportal.Debug" 
		/>
</PreferenceScreen>