<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:background="#EFF6D5"
	>

<LinearLayout
  	android:orientation="vertical"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:background="@drawable/itembackground"
  	>
  	
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_marginLeft="15sp" 
		android:layout_marginRight="15sp"
		android:layout_marginTop="20sp" 
		android:layout_height="wrap_content"
		android:background="@android:drawable/alert_light_frame">
		
		<ImageView 
			android:id="@+id/logo" 
			android:layout_width="90sp" 
			android:layout_height="90sp"
			android:scaleType="fitXY"
			android:src="@drawable/aphu_logo"
			android:padding="10sp"
			
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			/>
			
		<ImageView 
			android:src="@drawable/aphu_title"
			android:id="@+id/productId" 
			android:layout_width="wrap_content" 
			android:layout_height="24sp"
			android:scaleType="fitXY"
			
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@id/logo"
			android:layout_marginTop="10sp"
			/>
			
		<TextView 
			android:text="v1.0" 
			android:id="@+id/version" 
			android:textSize="15sp"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:textColor="#000000" 
			
			android:layout_below="@id/productId"
			android:layout_toRightOf="@id/logo"
			/>
			
		<ImageView
			android:id="@+id/divider"
			android:src="@android:drawable/divider_horizontal_bright"
			android:layout_width="fill_parent"
			android:layout_height="2sp"
			android:scaleType="fitXY"			
			android:layout_below="@id/logo"
			/>
			
		<TextView 
			android:text="AndroidPortal.hu alkalmazás egy nyíltforráskódú program, amely Bankdroid csapat támogatásával készült a magyar android közösségi portál számára." 
			android:id="@+id/description0" 
			android:textSize="13sp"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:textColor="#000000" 
			android:padding="5sp"
			
			android:layout_below="@id/divider"
			/>
			
		<TextView 
			android:text="Amennyiben bármilyen hibát észlelsz, kérlek jelentsd be, akár e-mailben, vagy a project oldalakon - lásd alant linkeket." 
			android:id="@+id/description" 
			android:textSize="13sp"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:textColor="#000000" 
			android:padding="5sp"
			
			android:layout_below="@id/description0"
			/>
			
		<ImageView
			android:id="@+id/divider2"
			android:src="@android:drawable/divider_horizontal_bright"
			android:layout_width="fill_parent"
			android:layout_height="2sp"
			android:scaleType="fitXY"			
			android:layout_below="@id/description"
			/>
			
		<TextView 
			android:text="http://androidportal.hu" 
			android:id="@+id/url1" 
			android:textSize="12sp"
			android:gravity="right"
			android:clickable="true"
			
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:paddingRight="5sp"
			
			android:layout_below="@id/divider2"
			/>
			
		<TextView 
			android:text="http://androidportal.googlecode.com" 
			android:id="@+id/url2" 
			android:textSize="12sp"
			android:gravity="right"
			android:clickable="true"
			
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:paddingRight="5sp"
			
			android:layout_below="@id/url1"
			/>
			
		<TextView 
			android:text="http://bankdroid.googlecode.com" 
			android:id="@+id/url3" 
			android:textSize="12sp"
			android:gravity="right"
			android:clickable="true"
			
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:paddingRight="5sp"
			
			android:layout_below="@id/url2"
			/>
			
	</RelativeLayout>
		
	
	<Button 
		android:text="További BankDroid programok" 
		android:id="@+id/marketSearch" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		
		android:layout_gravity="center_horizontal"
		/>
  	
</LinearLayout>

  </ScrollView>
