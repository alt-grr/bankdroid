<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_selected="true">
		<shape android:shape="rectangle">
			<gradient android:startColor="#97C465" android:endColor="#74AB45"
				android:angle="270" />
		</shape>
	</item>	
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<gradient android:startColor="#74AB45" android:endColor="#97C465"
				android:angle="270" />
		</shape>
	</item>
	<item android:state_selected="false">
		<shape android:shape="rectangle">
			<gradient android:startColor="#F8FBEE" android:endColor="#EFF6D5"
				android:angle="270" />
		</shape>
	</item>
</selector> 