<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_selected="true">
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle"> 
			<gradient android:startColor="@color/itemSelectedEnd"  android:endColor="@color/itemSelectedStart"
				android:angle="90" />
			<stroke android:width="2dp"
		            android:color="@color/tbButtonStroke"/>
		
		    <corners android:radius="3sp"/> 
		</shape>
	</item>	
	<item android:state_pressed="true">
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle"> 
			<gradient android:startColor="@color/itemSelectedEnd"  android:endColor="@color/itemSelectedStart"
				android:angle="270" />
			<stroke android:width="2dp"
		            android:color="@color/tbButtonStroke"/>
		 
		    <corners android:radius="3sp"/> 
		</shape>
	</item>


	<item android:state_selected="false">
		<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle"> 
			<gradient android:startColor="@color/tbButtonStart"  android:endColor="@color/tbButtonEnd"
				android:angle="270" />
			<stroke android:width="1sp"
		            android:color="@color/tbButtonStroke"/>
		
		    <corners android:radius="3sp"/> 
		</shape>
	</item>


</selector> 