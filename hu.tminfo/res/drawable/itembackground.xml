<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_selected="true">
		<shape android:shape="rectangle">
			<gradient android:startColor="@color/itemSelectedStart" android:endColor="@color/itemSelectedEnd"
				android:angle="270" />
		</shape>
	</item>	
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<gradient android:startColor="@color/itemSelectedEnd" android:endColor="@color/itemSelectedStart"
				android:angle="270" />
		</shape>
	</item>
	<item android:state_selected="false">
		<shape android:shape="rectangle">
			<gradient android:startColor="@color/itemStart" android:endColor="@color/itemEnd"
				android:angle="270" />
		</shape>
	</item>
</selector> 