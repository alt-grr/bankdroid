<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/widgetBackground"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/widgetframe_41_land"
  android:paddingTop="8sp"
  android:paddingBottom="8sp"
  android:paddingLeft="16sp"
  android:paddingRight="10sp"
  >
  	<ImageView
  		android:src="@drawable/logo"
  		android:id="@+id/droidLogo"
  		android:scaleType="fitXY"
  		android:layout_width="32sp"
  		android:layout_height="32sp"
  		android:layout_marginRight="6sp"
  		android:layout_alignParentRight="true"
  		android:layout_centerVertical="true"
  		/>
	<TextView
		android:id="@+id/title"
		android:text="Kérem várjon!"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:textStyle="bold"
	  	android:textColor="#000000"
	  	android:lines="1"
	  	
	  	android:layout_alignParentLeft="true"
	  	android:layout_alignParentTop="true"
	  	android:layout_toLeftOf="@id/droidLogo"
	  	/>
	<TextView
		android:id="@+id/summary"
		android:text="Az első indulás után egy kis időbe telik, amíg a widget feltöltődik. Ha rövid idő után sem tűnik el ez a szöveg, kérem jelentse a fejlesztőknek."
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:lines="2"
	  	android:textColor="#000000"
		android:textSize="10sp"
	  	
	  	android:layout_below="@id/title"
	  	android:layout_alignParentLeft="true"
	  	android:layout_toLeftOf="@id/droidLogo"
	  	/>
	  	
	<TextView
		android:id="@+id/author"
		android:text="valaki"
	  	android:layout_width="wrap_content"
	  	android:layout_height="wrap_content"
	  	android:textStyle="italic"
	  	android:textColor="#303030"
	  	android:textSize="8sp"
	  	android:paddingRight="3sp"
	  	
	  	android:layout_toLeftOf="@id/droidLogo"
	  	android:layout_below="@id/summary"
	  	/>

	<TextView
		android:id="@+id/badge"
		android:text="3"
		
		android:background="@drawable/widgetbadge"
		android:gravity="center"
		android:textColor="#FFF"
		android:textSize="12sp"
		android:textStyle="bold"
		android:shadowColor="#000"
		android:shadowRadius="2"
		android:shadowDx="0"
		android:shadowDy="0"

		
		android:layout_width="22sp"
		android:layout_height="22sp"
		
  		android:layout_alignParentTop="true"
  		android:layout_alignParentRight="true"
		/>
</RelativeLayout>
